<Window
	x:Class="HexView.GotoDialogView"
	x:ClassModifier="internal"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:HexView"
	Title="Goto"
	Icon="\Resources\HexView.ico"
	ResizeMode="NoResize"
	Height="150"
	Width="300"
	>
	<Grid Margin="5">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="Auto" />
		</Grid.ColumnDefinitions>

		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="3" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<Grid Margin="50,0" Grid.ColumnSpan="3">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="3" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>

			<Grid.RowDefinitions>
				<RowDefinition Height="*" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>

			<Label
				Grid.Column="0"
				Grid.Row="1"
				Content="Position:"
				/>

			<TextBox
				Name="PositionTextBox"
				Grid.Column="2"
				Grid.Row="1">
				<Binding Path="Offset" Converter="{x:Static local:HexConverter.Default}" ValidatesOnDataErrors="True">
					<Binding.ValidationRules>
						<local:HexValidation />
					</Binding.ValidationRules>
				</Binding>
			</TextBox>

			<Label
				Grid.Column="2"
				Grid.Row="2"
				>
				<StackPanel Orientation="Horizontal">
					<TextBlock>(0-</TextBlock>
					<TextBlock Text="{Binding MaxOffset, Converter={x:Static local:HexConverter.Default}}" />
					<TextBlock>)</TextBlock>
				</StackPanel>
			</Label>
		</Grid>

		<Button
			Grid.Column="2"
			Grid.Row="2"
			Content="Ok"
			Width="75"
			IsDefault="True"
			Click="OkClick"
			/>

		<Button
			Grid.Column="1"
			Grid.Row="2"
			Content="Cancel"
			Width="75"
			Margin="0,0,3,0"
			IsCancel="True"
			Click="CancelClick"
			/>
	</Grid>
</Window>
